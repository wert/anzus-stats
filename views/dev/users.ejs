<%- include("../default/head") %>
<script type="text/javascript" src="/js/underscore-min.js">
</script>
<script type="text/javascript" src="/js/jquery.dataTables.min.js"></script>

<script src="/js/users.js"></script>
<link href="/css/jquery.dataTables.min.css" rel="stylesheet">
<link href="/css/select2.min.css" rel="stylesheet" />
<script src="/js/select2.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.4/clipboard.min.js"></script>

<script>
    var clipboard = new ClipboardJS('.btn');

    clipboard.on('success', function (e) {
        console.log(e);
    });

    clipboard.on('error', function (e) {
        console.log(e);
    });
    function passg() {
        var chars = "abcdefghijklmnopqrstuvwxyz!@#$%^&*()-+<>ABCDEFGHIJKLMNOP1234567890";
        var pass = "";
        for (var x = 0; x < 17; x++) {
            var i = Math.floor(Math.random() * chars.length);
            pass += chars.charAt(i);
        }
        $("#password").val(pass);
        return pass;
    }


</script>
<div class="container">

    <div class="c-body">
        <main class="c-main">
            <div class="container-fluid">
                <div id="ui-view">
                    <div>


                        <div class="fade-in">
                            <div class="card">
                                <div class="card-header"> User list
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <button class="badge badge-info" data-toggle="modal"
                                                data-target="#createModal">Create Admin</button>
                                            <table id="table1"
                                                class="table table-striped table-bordered datatable dataTable no-footer">
                                                <thead>
                                                    <tr>
                                                        <th>Name</th>
                                                        <th>Roles</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% users.forEach(function(u) { %>
                                                    <tr>
                                                        <td><%=u.username%></td>
                                                        <td><%if(u.dev) {%><span
                                                                class="badge badge-danger">dev</span><%}if(u.slt) {%><span
                                                                class="badge badge-warning">slt</span><%}if(u.admin){%><span
                                                                class="badge badge-success">admin</span><%}else{%><span
                                                                class="badge badge-primary">user</span><%}%></td>
                                                        <td><button class="badge badge-success" data-toggle="modal" data-target="#editModal" data-id="<%=u.username%>"
                                                            data-admin="<%=u.admin%>"
                                                            data-dev="<%=u.dev%>"
                                                            data-slt="<%=u.slt%>">Edit</button><button
                                                                class="badge badge-danger" data-toggle="modal"
                                                                data-target="#deleteModal"
                                                                data-id="<%=u.username%>">Delete</button></td>
                                                    </tr>
                                                    <%});%>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
    </div>
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLable"
        style="display: none;" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Edit User</h4>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <spanaria-hidden="true">×</span>
                    </button>
                </div>
                <input class="form-control" id="oldusername" type="text" placeholder="olduser" style="display:none">
                <div class="modal-body">
                    <p class="text-muted" id="message"></p>
                    <form id="modalForm" role="form">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend"><span class="input-group-text">
                                    <svg class="c-icon">
                                        <use xlink:href="/images/stuff.svg#cil-user"></use>
                                    </svg></span></div>
                            <input class="form-control" id="username" type="text" placeholder="Username"
                                style="color:white;background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;"
                                autocomplete="off">
                        </div>
                        <div class="input-group mb-4">
                            <div class="input-group-prepend"><span class="input-group-text">
                                    <svg class="c-icon">
                                        <use xlink:href="/images/stuff.svg#cil-lock-locked"></use>
                                    </svg></span></div>
                            <input class="form-control" id="password" type="text" value="*******************"
                                style="color:white;background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;"
                                autocomplete="off">
                            <span class="input-group-append">
                                <button class="btn btn-secondary" style="background-color: #424249;color:white"
                                    type="button" title="" id="copytoClip" data-clipboard-target="#password">
                                    <svg class="c-icon">
                                        <use xlink:href="/images/stuff.svg#cil-clipboard"></use>
                                    </svg>
                                </button></span>
                            <span class="input-group-append">
                                <button class="btn btn-secondary" style="background-color: #424249;color:white"
                                    type="button" onclick="passg()">
                                    <svg class="c-icon">
                                        <use xlink:href="/images/stuff.svg#cil-asterisk"></use>
                                    </svg>
                                </button>
                        </div>
                        <%if(dev){%>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Group</label>
                            <div class="col-md-9 col-form-label">
                                <div class="form-check checkbox">
                                    <input class="form-check-input" id="sltGroup" type="checkbox" value="">
                                    <label class="form-check-label" for="sltGroup">SLT</label>
                                </div>
                                <%}%>
                                <div class="form-check checkbox">
                                    <input class="form-check-input" id="adminGroup" type="checkbox" value="">
                                    <label class="form-check-label" for="adminGroup">Admin</label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
                    <button class="save btn btn-primary" type="button">Save changes</button>
                </div>
            </div>

        </div>

    </div>
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModal"
        style="display: none;" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete Confirmation</h4>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <spanaria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete?</p>
                </div>
                <input class="form-control" id="deleteuser" type="text" placeholder="deleteuser" style="display:none">
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
                    <button class="delete btn btn-danger" type="button">Delete Account</button>
                </div>
            </div>

        </div>

    </div>
    <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModalLable"
        style="display: none;" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Create User</h4>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <spanaria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="text-muted" id="createMessage"></p>
                    <form id="modalForm" autocomplete="off" role="form">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend"><span class="input-group-text">
                                    <svg class="c-icon">
                                        <use xlink:href="/images/stuff.svg#cil-user"></use>
                                    </svg></span></div>
                            <input class="form-control" id="createUsername" type="text" placeholder="Username"
                                style="color:white;background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;"
                                autocomplete="off">
                        </div>
                        <div class="input-group mb-4">
                            <div class="input-group-prepend"><span class="input-group-text">
                                    <svg class="c-icon">
                                        <use xlink:href="/images/stuff.svg#cil-lock-locked"></use>
                                    </svg></span></div>
                            <input class="form-control" id="createPassword" type="text" readonly autocomplete="off"
                                style="color:white;background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
                            </input>
                            <span class="input-group-append">
                                <button class="btn btn-secondary" style="background-color: #424249;color:white"
                                    type="button" title="" id="copytoClip" data-clipboard-target="#createPassword">
                                    <svg class="c-icon">
                                        <use xlink:href="/images/stuff.svg#cil-clipboard"></use>
                                    </svg>
                                </button></span>
                            <span class="input-group-append">
                                <button class="btn btn-secondary" style="background-color: #424249;color:white"
                                    type="button" onclick="passg()">
                                    <svg class="c-icon">
                                        <use xlink:href="/images/stuff.svg#cil-asterisk"></use>
                                    </svg>
                                </button></span>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Group</label>
                            <div class="col-md-9 col-form-label">
                                <div class="form-check checkbox">
                                    <input class="form-check-input" id="sltGroup1" type="checkbox" value="">
                                    <label class="form-check-label" for="sltGroup1">SLT</label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
                    <button class="create btn btn-primary" type="button">Create User</button>
                </div>
            </div>

        </div>

    </div>
    </main>
</div>
</div>
